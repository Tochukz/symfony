{% extends 'base.html.twig' %}
{% block title %} Symfart Demo App{% endblock %}
{% block body %}
    <h1>Articles</h1>
    {% if articles %}
        <table id="articles" class="table table-striped">
            <thead>
                <tr>
                    <th>Aticle</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for article in articles %}
                    <tr>
                        <td>
                            {{ article.title }}
                        </td>
                        <td>
                            <a href="/article/{{ article.id }}" class="btn btn-dark">Show</a>
                            <a href="/article/edit/{{ article.id }}" class="btn btn-light">Edit</a>
                            <a href="#" class="btn btn-danger delete-article" data-id="{{ article.id }}">Delete</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>There are no articles</p>
    {% endif %}
{% endblock %}
{% block javascripts %}
<script src="/js/main.js"></script>
{% endblock %}